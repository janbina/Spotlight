<resources>
    <properties>
        <!-- Settings that were previously Float and are now Number
             (percentage) have a P prefixed, to make sure existing
             settings don't get misinterpreted and go back to default
        -->
        <property id="notificationStyle" type="number">1</property>
        <property id="batteryThreshold" type="number">20</property>
    	<property id="zoomFactorP" type="number">210</property>
    	<property id="focalPointP" type="number">80</property>
    	<property id="textPositionP" type="number">80</property>
        <property id="textVisible" type="boolean">true</property>
        <property id="textVisibleLowPower" type="boolean">false</property>
        <property id="font" type="number">2</property>
        <property id="numerals" type="number">0</property>
        <property id="fontColor" type="string">FFFFFF</property>
        <property id="backgroundColor" type="string">000000</property>
        <property id="hashMarkColor" type="string">FFFFFF</property>
        <property id="hourLineColor" type="string">FF0000</property>
        <property id="fontLowPowerColor" type="string">606060</property>
        <property id="hashMarkLowPowerColor" type="string">707070</property>
        <property id="hourLineLowPowerColor" type="string">AA0000</property>
    	<property id="markLargeLengthP" type="number">10</property>
    	<property id="markLargeWidth" type="number">3</property>
    	<property id="markMediumLengthP" type="number">5</property>
    	<property id="markMediumWidth" type="number">2</property>
    	<property id="markSmallLengthP" type="number">2</property>
    	<property id="markSmallWidth" type="number">1</property>
    </properties>

    <settings>
        <setting propertyKey="@Properties.notificationStyle" title="@Strings.notificationStyleTitle" prompt="@Strings.notificationStylePrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.notificationStyle0</listEntry>
                <listEntry value="1">@Strings.notificationStyle1</listEntry>
                <listEntry value="2">@Strings.notificationStyle2</listEntry>
            </settingConfig>
		</setting>
        <setting propertyKey="@Properties.batteryThreshold" title="@Strings.batteryThresholdTitle" prompt="@Strings.batteryThresholdPrompt">
            <settingConfig type="numeric" min="0" max ="100" />
		</setting>
        <setting propertyKey="@Properties.zoomFactorP" title="@Strings.zoomFactorTitle" prompt="@Strings.zoomFactorPrompt">
            <settingConfig type="numeric" min="200" max ="400" />
		</setting>
        <setting propertyKey="@Properties.focalPointP" title="@Strings.focalPointTitle" prompt="@Strings.focalPointPrompt">
            <settingConfig type="numeric" min="50" max ="150" />
		</setting>
        <setting propertyKey="@Properties.textPositionP" title="@Strings.textPositionTitle" prompt="@Strings.textPositionPrompt">
            <settingConfig type="numeric" min="50" max ="150" />
		</setting>
        <setting propertyKey="@Properties.textVisible" title="@Strings.textVisibleTitle" prompt="@Strings.textVisiblePrompt">
            <settingConfig type="boolean" />
		</setting>
        <setting propertyKey="@Properties.textVisibleLowPower" title="@Strings.textVisibleLowPowerTitle" prompt="@Strings.textVisibleLowPowerPrompt">
            <settingConfig type="boolean" />
		</setting>
        <setting propertyKey="@Properties.font" title="@Strings.fontTitle" prompt="@Strings.fontPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.font0</listEntry>
                <listEntry value="1">@Strings.font1</listEntry>
                <listEntry value="2">@Strings.font2</listEntry>
                <listEntry value="3">@Strings.font3</listEntry>
                <listEntry value="4">@Strings.font4</listEntry>
                <listEntry value="5">@Strings.font5</listEntry>
                <listEntry value="6">@Strings.font6</listEntry>
                <listEntry value="7">@Strings.font7</listEntry>
                <listEntry value="8">@Strings.font8</listEntry>
                <listEntry value="9">@Strings.font9</listEntry>
                <listEntry value="10">@Strings.font10</listEntry>
                <listEntry value="11">@Strings.font11</listEntry>
                <listEntry value="12">@Strings.font12</listEntry>
                <listEntry value="13">@Strings.font13</listEntry>
                <listEntry value="14">@Strings.font14</listEntry>
                <listEntry value="15">@Strings.font15</listEntry>
                <listEntry value="16">@Strings.font16</listEntry>
                <listEntry value="17">@Strings.font17</listEntry>
                <listEntry value="18">@Strings.font18</listEntry>
                <listEntry value="19">@Strings.font19</listEntry>
            </settingConfig>
		</setting>
        <setting propertyKey="@Properties.numerals" title="@Strings.numeralsTitle" prompt="@Strings.numeralsPrompt">
            <settingConfig type="list">
                <listEntry value="0">@Strings.numeralsArabic</listEntry>
                <listEntry value="1">@Strings.numeralsRoman</listEntry>
            </settingConfig>
		</setting>
        <setting propertyKey="@Properties.fontColor" title="@Strings.numeralsColorTitle" prompt="@Strings.numeralsColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.backgroundColor" title="@Strings.backgroundColorTitle" prompt="@Strings.backgroundColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.hashMarkColor" title="@Strings.hashMarkColorTitle" prompt="@Strings.hashMarkColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.hourLineColor" title="@Strings.hourLineColorTitle" prompt="@Strings.hourLineColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.fontLowPowerColor" title="@Strings.numeralsLowPowerColorTitle" prompt="@Strings.numeralsLowPowerColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.hashMarkLowPowerColor" title="@Strings.hashMarkLowPowerColorTitle" prompt="@Strings.hashMarkLowPowerColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.hourLineLowPowerColor" title="@Strings.hourLineLowPowerColorTitle" prompt="@Strings.hourLineLowPowerColorPrompt">
            <settingConfig type="alphaNumeric" />
		</setting>
        <setting propertyKey="@Properties.markLargeLengthP" title="@Strings.markLargeLengthTitle" prompt="@Strings.markLargeLengthPrompt">
            <settingConfig type="numeric" min="0" max ="100" />
		</setting>
        <setting propertyKey="@Properties.markLargeWidth" title="@Strings.markLargeWidthTitle" prompt="@Strings.markLargeWidthPrompt">
            <settingConfig type="numeric" min="0" max ="10" />
		</setting>
        <setting propertyKey="@Properties.markMediumLengthP" title="@Strings.markMediumLengthTitle" prompt="@Strings.markMediumLengthPrompt">
            <settingConfig type="numeric" min="0" max ="100" />
		</setting>
        <setting propertyKey="@Properties.markMediumWidth" title="@Strings.markMediumWidthTitle" prompt="@Strings.markMediumWidthPrompt">
            <settingConfig type="numeric" min="0" max ="10" />
		</setting>
        <setting propertyKey="@Properties.markSmallLengthP" title="@Strings.markSmallLengthTitle" prompt="@Strings.markSmallLengthPrompt">
            <settingConfig type="numeric" min="0" max ="100" />
		</setting>
        <setting propertyKey="@Properties.markSmallWidth" title="@Strings.markSmallWidthTitle" prompt="@Strings.markSmallWidthPrompt">
            <settingConfig type="numeric" min="0" max ="10" />
		</setting>
    </settings>
</resources>
